<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    tools:context=".Market">

    <!--Return to home button -->
    <!--Make sure these are consistent throughout the pages-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.033">

        <Button
            android:id="@+id/return_dashboard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_button_default"
            android:fontFamily="@font/introrust"
            android:textSize="10sp"
            app:backgroundTint="@null" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back"
            app:tint="#0f4162" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/blue"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142">

        <!-- Container for text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            tools:ignore="RtlSymmetry">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get free delivery"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_button_default"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_marginLeft="19dp"
                android:backgroundTint="#aebfcd"
                android:text="Buy now"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Image -->
        <ImageView
            android:layout_width="154dp"
            android:layout_height="156dp"
            android:layout_gravity="end|center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_boxofsweets" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Yummy treats!"
        android:textColor="@color/darkblue"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="258dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmsansmedium"
        android:paddingLeft="4dp"
        android:text="indulge in our sweet treats"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="308dp" />
<!--Main Layout for store items-->
    <GridLayout
        android:id="@+id/marketGrid"
        android:layout_width="330dp"
        android:layout_height="500dp"
        android:layout_marginStart="40dp"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="false"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="370dp">

        <!-- Shared layout params for all items -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_brookies" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Classic Brownies"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱45–140"
                    android:textColor="@color/darkblue"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="⭐4.3"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:fontFamily="@font/dmsansmedium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Dish 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_boxofsweets" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Brookies"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱250"
                    android:textColor="@color/darkblue"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="⭐4.7"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:fontFamily="@font/dmsansmedium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Dish 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_cupcake" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Biscoff"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱60"
                    android:textColor="@color/darkblue"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="⭐4.5"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:fontFamily="@font/dmsansmedium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Dish 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_donut" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Choco Chip Cookies"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱35"
                    android:textColor="@color/darkblue"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="⭐4.1"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:fontFamily="@font/dmsansmedium" />
            </LinearLayout>
        </LinearLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>