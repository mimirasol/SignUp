<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    tools:context=".Market">

    <!--Return to home button -->
    <FrameLayout
        android:id="@+id/backButtonFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/return_dashboard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_button_default"
            android:fontFamily="@font/introrust"
            android:textSize="10sp"
            app:backgroundTint="@null" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back"
            app:tint="#0f4162" />
    </FrameLayout>

    <!-- Promotional Banner -->
    <FrameLayout
        android:id="@+id/promotionalBanner"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/backButtonFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Container for text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            tools:ignore="RtlSymmetry">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get free delivery"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_button_default"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_marginLeft="19dp"
                android:backgroundTint="#aebfcd"
                android:text="Buy now"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Image -->
        <ImageView
            android:layout_width="154dp"
            android:layout_height="156dp"
            android:layout_gravity="end|center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_boxofsweets" />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Yummy treats!"
        android:textColor="@color/darkblue"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/promotionalBanner"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/dmsansmedium"
        android:paddingLeft="4dp"
        android:text="indulge in our sweet treats"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <!--Main Layout for store items-->
    <GridLayout
        android:id="@+id/marketGrid"
        android:layout_width="330dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="false"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/btnCart"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Dish 1: Classic Brownies -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_brownies" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Classic Brownies"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱45–140"
                    android:textColor="@color/darkblue"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="⭐4.3"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:fontFamily="@font/dmsansmedium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Dish 2: Brookies -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_brookies" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Brookies"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱250"
                    android:textColor="@color/darkblue"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="⭐4.7"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:fontFamily="@font/dmsansmedium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Dish 3: Biscoff -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_biscoff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Biscoff"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱60"
                    android:textColor="@color/darkblue"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="⭐4.5"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:fontFamily="@font/dmsansmedium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Dish 4: Choco Chip Cookies -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_cookies" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Choco Chip Cookies"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱35"
                    android:textColor="@color/darkblue"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="⭐4.1"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:fontFamily="@font/dmsansmedium" />
            </LinearLayout>
        </LinearLayout>
    </GridLayout>

    <Button
        android:id="@+id/btnCart"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:text="Cart"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/btn_button_default"
        android:backgroundTint="@color/darkblue"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="30dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/marketGrid"
        app:layout_constraintEnd_toEndOf="@id/marketGrid" />
</androidx.constraintlayout.widget.ConstraintLayout>