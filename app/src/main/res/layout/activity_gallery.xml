<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gallery_bg"
    tools:context=".Gallery">

    <!--Title "Meet the Team"-->
    <TextView
        android:id="@+id/gallery_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/introrust"
        android:gravity="center"
        android:text="MEET THE TEAM"
        android:textColor="#0f4162"
        android:textSize="40.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <!--Team description-->
    <TextView
        android:id="@+id/team_description"
        android:layout_width="341dp"
        android:layout_height="99dp"
        android:fontFamily="@font/dmsans"
        android:gravity="start"
        android:justificationMode="inter_word"
        android:lineSpacingExtra="2dp"
        android:text="@string/team_description"
        android:textColor="#0f4162"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

    <!--Grid Gallery - left-->
    <GridLayout
        android:id="@+id/grid_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        android:paddingLeft="6dp"
        android:layout_marginLeft="24dp"
        android:useDefaultMargins="false"
        app:layout_constraintTop_toBottomOf="@id/team_description"
        app:layout_constraintStart_toStartOf="parent" >

        <!--Nathan layout-->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/nathan_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_bg"
                android:clipToOutline="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/nathan_pic"
                android:contentDescription="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/introrust"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="9dp"
                android:text="Nathan"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </FrameLayout>

        <!--Jeff layout-->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/jeff_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_bg"
                android:clipToOutline="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/jep_pic"
                android:contentDescription="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/introrust"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="9dp"
                android:text="Jeff"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </FrameLayout>

        <!--Extra layout-->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/extra_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_bg"
                android:clipToOutline="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/jep_pic"
                android:contentDescription="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/introrust"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="9dp"
                android:text="Extra"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </FrameLayout>
    </GridLayout>

    <!--Grid Gallery - right-->
    <GridLayout
        android:id="@+id/grid_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        android:layout_marginTop="40dp"
        android:padding="1dp"
        app:layout_constraintTop_toBottomOf="@id/team_description"
        app:layout_constraintStart_toEndOf="@id/grid_left"
        app:layout_constraintVertical_bias="0.3" >

        <!--Mira layout-->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/mira_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_bg"
                android:clipToOutline="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/mira_pic"
                android:contentDescription="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/introrust"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="9dp"
                android:text="mira"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </FrameLayout>

        <!--Sam layout-->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/sam_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_bg"
                android:clipToOutline="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/sam_pic"
                android:contentDescription="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/introrust"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="9dp"
                android:text="sam"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </FrameLayout>

        <!--Extra 2 layout-->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/extra2_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_bg"
                android:clipToOutline="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/jep_pic"
                android:contentDescription="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/introrust"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="9dp"
                android:text="Extra"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </FrameLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>