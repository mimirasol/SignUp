<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".item_order">

    <View
        android:id="@+id/itemRectangle"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_dashboard"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        app:layout_constraintEnd_toStartOf="@+id/itemName"
        app:layout_constraintBottom_toBottomOf="@+id/itemRectangle"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@drawable/img_biscoff" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Item Name"
        android:textColor="@color/darkblue"
        app:layout_constraintStart_toEndOf="@id/itemImg"
        app:layout_constraintTop_toTopOf="@id/itemImg"/>

    <TextView
        android:id="@+id/itemPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmsansmedium"
        android:text="X Pieces"
        android:textColor="@color/blue"
        android:textSize="12dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintStart_toStartOf="@id/itemName"
        app:layout_constraintTop_toBottomOf="@id/itemName" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="PXXX"
        android:textColor="@color/darkblue"
        app:layout_constraintStart_toStartOf="@id/itemPack"
        app:layout_constraintTop_toBottomOf="@id/itemPack"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/itemQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="X"
        android:textColor="@color/darkblue"
        app:layout_constraintStart_toStartOf="@id/addBtn"
        app:layout_constraintTop_toTopOf="@id/itemPrice"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="2dp" />

    <ImageButton
        android:id="@+id/addBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@id/itemRectangle"
        app:layout_constraintTop_toTopOf="@id/itemPrice"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/img_add" />

    <ImageButton
        android:id="@+id/minusBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/itemQty"
        app:layout_constraintTop_toTopOf="@id/itemPrice"
        android:layout_marginStart="-33dp"
        app:srcCompat="@drawable/img_minus" />

    <ImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="@id/itemRectangle"
        app:layout_constraintTop_toTopOf="@id/itemName"
        app:srcCompat="@drawable/delete_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>